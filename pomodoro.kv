<PomodoroScreen>:
    orientation: 'vertical'
    spacing: dp(15)
    padding: dp(20)

    MDLabel:
        text: "Pomodoro Timer"
        font_style: "H3"
        halign: "center"


    MDLabel:
        text: "Session: " + str(root.session_count)
        halign: "center"
        id: cycle_label
        pos_hint: {"center_x": 0.5}
        font_style:"H4"


    MDLabel:
        text:root.session
        halign: "center"
        id: session
        pos_hint: {"center_x": 0.5}
        font_style:"H5"



    MDCard:
        size_hint: None, None
        size: "280dp", "180dp"
        pos_hint: {"center_x": 0.5}
        elevation: 1
        MDLabel:
            id: timer_label
            text: root.timer_text
            halign: "center"
            font_style:"H5"


    MDCard:
        size_hint: None, None
        size: "280dp", "180dp"
        pos_hint: {"center_x": 0.5}
        elevation: 1


        BoxLayout:
            orientation: "horizontal"
            size_hint: None, None
            size: self.parent.size
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            padding: dp(10)
            spacing: dp(10)



            BoxLayout:
                orientation: "horizontal"
                height: self.minimum_height
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                size_hint: 1, None

                Widget:
                    size_hint:1, None

                Button:
                    id: refresh_button
                    size: "60dp", "60dp"
                    size_hint: None, None
                    background_normal: "assets/refresh.png"
                    background_down: "assets/refresh.png" #Optional, but good practice.
                    on_press: root.on_refresh_button_pressed()

                Widget:
                    size_hint:1, None

                Button:
                    id: play_button
                    size: "60dp", "60dp"
                    size_hint: None, None
                    background_normal: '' # Make the background transparent
                    background_down: '' # Make the background transparent                    on_press: root.on_play_pause_button_pressed()
                    Image:
                        source: "assets/play.png" if not root.is_running else "assets/pause.png"
                        center: self.parent.center
                        size: self.parent.size #match the button size
                        allow_stretch: False #prevent distortion
                        keep_ratio: True #prevent distortion

                Widget:
                    size_hint:1, None

                Button:
                    id: next_button
                    size: "60dp", "60dp"
                    size_hint: None, None
                    background_normal: "assets/next.png"
                    background_down: "assets/next.png" #optional, but good practice.
                    on_press: root.on_next_button_pressed()


                Widget:
                    size_hint:1, None